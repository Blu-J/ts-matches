{
  "compilerOptions": {
    "module": "esnext",
    "strict": true,
    "outDir": "lib",
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es2017",
    "pretty": true,
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec", "src/**/*.gen", "list", "node_modules"]
}
